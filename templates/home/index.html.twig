{% extends 'base.html.twig' %}

{% block title %}Hello HomeController!{% endblock %}

{% block stylesheets %}
    <style>
        .news-list-container {
            padding: 20px;
        }

        .news-container {
            display: flex;
            flex-direction: row;
        }

        .karma {
            display: flex;
            flex-direction: row;
        }

        .karma-count {
            display: flex;
            flex-direction: column;
        }

        .news-infos {
            display: flex;
            flex-direction: column;
            width: 100%;
        }

        .news-meta {
            display: flex;
            flex-direction: row;
            justify-content: space-between;
        }

        .karma-count {
            align-self: center;
            font-size: 32px;
        }

        .karma-buttons {
            align-self: center;
            display: flex;
            flex-direction: column;
            font-size: 34px;
            justify-content: space-between;
            height: 100%;
            margin: 0 10px;
        }

        .news-title {
            margin: 5px;
        }

        .news-link-container {
            margin-top: 0;
            margin-bottom: 10px;
        }
    </style>
{% endblock %}

{% block body %}

    <div class="news-list-container">
        <div class="news-container">
            <div class="karma">
                <div class="karma-count">17</div>
                <div class="karma-buttons">
                    <div class="karma-btn upvote-btn">
                        <i class="las la-chevron-up"></i>
                    </div>
                    <div class="karma-btn downvote-btn">
                        <i class="las la-chevron-down"></i>
                    </div>
                </div>
            </div>
            <div class="news-infos">
                <h2 class="news-title">Some exciting news</h2>
                    <p class="news-link-container">
                        <a href="http://ter.re/" target="_blank" class="news-link">http://ter.re/</a>
                    </p>
                <div class="news-meta">
                    <div class="news-author">by God</div>
                    <div>2023-01-21</div>
                </div>
            </div>
        </div>
    </div>
    {% for link in links %}
        {{ dump(link) }}
    {% endfor %}
{% endblock %}
